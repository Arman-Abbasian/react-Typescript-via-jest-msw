{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "es2015"],
      "jsx": "react",
      "module": "commonjs",
      "esModuleInterop": true,
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": "./src",
      "paths": {
        "*": ["types/*"]
      }
    },
    "include": ["src/**/*"],
    "jest": {
      "testMatch": [
        "**/tests/**/*.test.tsx"
      ]
    }
  }